{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["chrome", "node"],
    "lib": ["DOM", "ES6"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
